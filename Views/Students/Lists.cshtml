@model IEnumerable<StudentsCRUDWithImageMVC.Models.ListsModel>

@{
    ViewBag.Title = "Lists";
}

<h2 style="color:darkblue" align="center">Students Details</h2>
<p>
    @Html.ActionLink("Create New", "Insert", null, new { @class = "btn btn-primary" })
</p>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.RollNo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.City)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.State)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Fees)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.JoiningDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Image)
        </th>
        <th></th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.RollNo</td>
            <td>@item.Name</td>
            <td>@item.City</td>
            <td>@item.State</td>
            <td>@item.Fees</td>
            <td>@item.JoiningDate.ToShortDateString()</td>
            <td>
                @if (item.Image != null)
                {
                    string imageBase64 = Convert.ToBase64String(item.Image);
                    string imageSrc = string.Format("data:image/jpg;base64,{0}", imageBase64);
                    <img src="@imageSrc" width="100" height="60" />
                }
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.RollNo }) |
                @Html.ActionLink("Details", "Details", new { id = item.RollNo }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.RollNo })
            </td>
        </tr>
    }
</table>
