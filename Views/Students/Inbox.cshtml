@model List<StudentsCRUDWithImageMVC.Models.MessageModel>

<h2>Inbox</h2>

<table>
    <thead>
        <tr>
            <th>From</th>
            <th>Subject</th>
            <th>Date</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var msg in Model)
        {
            <tr>
                <td>@msg.SenderEmail</td>
                <td>@msg.Subject</td>
                <td>@msg.SentDate.ToString("g")</td>
            </tr>
        }
    </tbody>
</table>
